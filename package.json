{
    "name": "web-chunks",
    "version": "1.1.0",
    "description": "web shared config",
    "author": "Andrei Bunulu <bunulu@gmail.com>",
    "main": "dist/index.js",
    "license": "MIT",
    "scripts": {
        "start": "babel src --out-dir dist --extensions '.ts,.tsx' --watch",
        "build": "babel src --out-dir dist --extensions '.ts,.tsx'",
        "lint": "eslint --fix src/**/*.ts && pretty-quick",
        "tsc": "tsc",
        "release": "standard-version",
        "add": "git cz",
        "install-peers": "npm-install-peers"
    },
    "peerDependencies": {
        "@babel/cli": "^7.7.0",
        "@babel/core": "^7.7.2",
        "@babel/plugin-transform-typescript": "^7.7.2",
        "@babel/preset-env": "^7.7.1",
        "@babel/preset-react": "^7.7.0",
        "@babel/preset-typescript": "^7.7.2",
        "@types/mini-css-extract-plugin": "^0.8.0",
        "@types/webpack-assets-manifest": "^3.0.0",
        "@types/webpack-merge": "^4.1.5",
        "@typescript-eslint/parser": "^2.7.0",
        "@typescript-eslint/eslint-plugin": "^2.7.0",
        "babel-loader": "^8.0.6",
        "clean-webpack-plugin": "^3.0.0",
        "css-loader": "^3.2.0",
        "eslint": "^6.6.0",
        "eslint-loader": "^3.0.2",
        "file-loader": "^4.2.0",
        "html-webpack-plugin": "^3.2.0",
        "image-webpack-loader": "^6.0.0",
        "mini-css-extract-plugin": "^0.8.0",
        "postcss-loader": "^3.0.0",
        "raw-loader": "^3.1.0",
        "sass-loader": "^8.0.0",
        "source-map-loader": "^0.2.4",
        "svg-react-loader": "^0.4.6",
        "typescript": "^3.7.2",
        "url-loader": "^2.2.0",
        "webpack": "^4.41.2",
        "webpack-assets-manifest": "^3.1.1",
        "webpack-cli": "^3.3.10",
        "webpack-dev-server": "^3.9.0",
        "webpack-merge": "^4.2.2",
        "@commitlint/cli": "^8.2.0",
        "@commitlint/config-conventional": "^8.2.0",
        "cz-conventional-changelog": "^3.0.2",
        "commitizen": "^4.0.3",
        "lint-staged": "9.4.3",
        "standard-version": "^7.0.0",
        "husky": "^3.0.9",
        "prettier": "^1.19.1",
        "pretty-quick": "^2.0.1",
        "terser-webpack-plugin": "^2.2.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-conventional"
        ]
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "eslint --fix",
            "pretty-quick",
            "git add"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
